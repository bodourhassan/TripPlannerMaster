<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ititeam.tripplannermaster.activity.login.SignUpFragment">


    <EditText
        android:id="@+id/FragmentSignInEmail"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="92dp"
        android:background="@drawable/bubble"
        android:drawableLeft="@drawable/ic_user_icon"
        android:gravity="center_vertical"
        android:hint="@string/email"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:textColor="#ffffff"
        android:textColorHint="#8effffff" />

    <EditText
        android:id="@+id/fragmentSignInPassword"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:background="@drawable/bubble"
        android:drawableLeft="@drawable/ic_pass_icon"
        android:gravity="center_vertical"
        android:hint="@string/password"
        android:paddingEnd="32dp"
        android:paddingStart="32dp"
        android:textColor="#ffffff"
        android:textColorHint="#8effffff" />
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <CheckBox
        android:id="@+id/FragmentLoginKeepMeLoggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:text="keep me logged in" />
</LinearLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:id="@+id/forgot_password"
        android:clickable="true"
        android:layout_marginTop="27dp"
        android:gravity="center"
        android:text="@string/forgot_password"
        android:textColor="#ffffff" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="30dp" />


</LinearLayout>
